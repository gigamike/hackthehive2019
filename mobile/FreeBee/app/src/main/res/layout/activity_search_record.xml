<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_image_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:overScrollMode="ifContentScrolls"
            android:background="@drawable/background_image_opacity">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Filter\nCommunity"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textColor="@color/colorWhite"/>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/frmSearch_cmbOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization"
                app:met_floatingLabel="normal"
                app:met_baseColor="@color/colorWhite"
                app:met_textColor="@color/colorWhite"
                app:met_textColorHint="@color/colorWhite"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/frmSearch_txtFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:hint="First Name" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/frmSearch_txtLastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Last Name"
                    android:maxLength="50"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/colorWhite"
                android:text="Filter"
                android:textSize="15sp"
                android:background="@drawable/rounded_buttons"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
